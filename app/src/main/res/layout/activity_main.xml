<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Zip_Code_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Your Zip Code"
        android:textSize="@dimen/Header_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Zip_Code_Edit"
        app:layout_constraintEnd_toEndOf="@+id/Zip_Code_Edit"
        app:layout_constraintStart_toStartOf="@+id/Zip_Code_Edit" />

    <EditText
        android:id="@+id/Zip_Code_Edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Zip Code"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215" />

    <Button
        android:id="@+id/Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        app:layout_constraintEnd_toEndOf="@+id/Zip_Code_Edit"
        app:layout_constraintStart_toStartOf="@+id/Zip_Code_Edit"
        app:layout_constraintTop_toBottomOf="@+id/Zip_Code_Edit" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/ic_location_on_black_24dp"
        app:layout_constraintBottom_toTopOf="@+id/Zip_Code_Text"
        app:layout_constraintEnd_toEndOf="@+id/Zip_Code_Text"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/Zip_Code_Text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

</android.support.constraint.ConstraintLayout>